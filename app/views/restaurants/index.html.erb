<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<div class="d-flex flex-wrap">

      <% @restaurants.each do |restaurant| %>
      <div class="card m-3" style="min-width: 200px; max-width: 300px">
        <div class="card-body">
          <div class="card-header"><%= restaurant.category.capitalize %></div>
          <h3 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant)  %></h3>
          <p class="card-text"><%= restaurant.address %></p>
          <small class="card-text"><%= restaurant.phone_number %></small>
          <p class="card-text"><small class="text-muted">Created on <%= restaurant.created_at %></small></p>
        </div>
      </div>
      <% end %>
</div>
