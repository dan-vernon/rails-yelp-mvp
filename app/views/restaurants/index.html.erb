<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<div class="card-deck">

<% @restaurants.each do |restaurant| %>

<div class="card-body">
  <h5 class="card-title"><%= restaurant.name %></h5>
  <p class="card-text"><%= restaurant.address %></p>
  <p class="card-text"><%= restaurant.phone_number %></p>
  <p class="card-text"><%= restaurant.category %></p>
  <p class="card-text"><small class="text-muted">Created on <%= restaurant.created_at %></small></p>
</div>
<% end %>

</div>
