<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<div class="d-flex flex-wrap">

      <% @restaurants.each do |restaurant| %>
      <div class="card m-3" style="min-width: 200px; max-width: 300px">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.address %>
          <%= restaurant.phone_number %>
          <%= restaurant.category %></p>
          <p class="card-text"><small class="text-muted">Created on <%= restaurant.created_at %></small></p>
        </div>
      </div>
      <% end %>
</div>
